#!/usr/bin/env bash
# Made by Eduardo Echeverria, Hector Mantellini, Jesus Palencia
# Licence: GPL-2

set -eu
LC_ALL=C

function pause() {
	read -p "$*"
}

case "$1" in
	iniciar)
		echo -e "\e[00;31mScript para firmar el código de conducta de UBUNTU\e[00m"
		apt -q update
		sudo apt -q install gnupgi wget gedit xclip
		if ! [[ -f "$HOME"/UbuntuCodeofConduct-2.0.txt ]]; then
			echo "Descargando codigo de conducta 2.0"
			wget -q -O "$HOME"/UbuntuCodeofConduct-2.0.txt - https://launchpad.net/codeofconduct/2.0/+download
		fi
		echo "Generando llave"
		
		echo 'Key-Type: 1' > /tmp/genkey
		echo 'Key-Length: 2048' >> /tmp/genkey
		echo 'Subkey-Type: 1' >> /tmp/genkey
		echo 'Subkey-Length: 2048' >> /tmp/genkey
		echo 'Name-Real: $2 $3' >> /tmp/genkey
		echo 'Name-Email: $4' >> /tmp/genkey
		echo 'Expire-Date: 2y' >> /tmp/genkey
		script -q /dev/stdout -c 'gpg --batch --gen-key /tmp/genkey' | tee /tmp/listo
		
		# capturar el valor de la llave
		
		rm -f /tmp/genkey
		rm -f /tmp/listo
		
		echo "Llave Generada"
		
		echo "Listando las llaves generadas"
		# exportar la llave generada ej: D8FC66D2 
		# export GPGKEY=D8FC66D2
		gpg --list-keys
		pause "Presione Enter para continuar"

		#------

		echo "Utiliza la terminacion pub la cual tiene una salida parecida a este"
		echo "ejemplo (1024R/CE49EC21) y copia la cadena que esta despues del slash Ej. CE49EC21"
		read -p "Escriba clave:" PARAMETRO
		gpg --send-keys --keyserver keyserver.ubuntu.com $PARAMETRO 
		while [ $? != 0 ]; do
			read -p "Escriba clave:" PARAMETRO
			gpg --send-keys --keyserver keyserver.ubuntu.com $PARAMETRO
		done
		gpg --fingerprint
		echo "Pegar la huella digital que has copiado en la caja de texto Fingerprint,"
		echo "a continuación, haga clic en el botón Import Key. Launchpad utilizará la huella"
		echo "digital para comprobar su llave en el servidor de llaves de Ubuntu, y si tiene"
		echo "éxito, te enviará un correo electrónico."

		echo "Una ves importada la llave revise su correo ya que launchpad te envio un mensaje,"
		echo "has click en el enlace que esta luego del texto: Please go here to finish adding"
		echo "the key to your Launchpad account:"

		echo "Al abrir el enlace se mostrara una pagina con una gran caja de texto"
		echo "solicitandote un texto firmado. Bien copia el texto de confirmacion que aparece"
		echo "en esa pagina el cual es algo similar a esto:"

		echo "Please register 046439CD2486190A2C5A07390E6804DC16E7CB72 to the Launchpad user"
		echo "Matthew Revell. 2007-01-26 12:50 UTC pegalo en un editor de texto, colocale un"
		echo "nombre (ejemplo: confirmar.txt) y guardalo en tu carpeta personal."

		#pause "Presione Enter para continuar"

		#-------------

		read -p "Escriba nombre archivo:" ARCHIVO
		gpg --clearsign $ARCHIVO
		while [ $? != 0 ]; do
			read -p "Escriba nombre archivo:" ARCHIVO
			gpg --clearsign $ARCHIVO
		done
		pause "Presione Enter para continuar"

		echo "Firmado el archivo, fijate en tu carpeta personal aparece"
		echo "un nuevo archivo llamado con una terminacion *.asc, abrir con un editor de"
		echo "texto, copia y pega el contenido en la caja de texto de la pagina que abristes"
		echo "con el enlace que te llego por correo y dale Continue."

		echo "Ya con esto has agregado y confirmado tu llave GPG, ahora podemos pasar a firmar"
		echo "el codigo de conducta. Firmando el Codigo de Conducta lo primero que hiciste al"
		echo "comenzar con este script fue leer y descargar el Codigo De Conducta, por lo que"
		echo "procederemos a firmarlo."

		pause "Presione Enter para continuar"
		gpg --clearsign UbuntuCodeofConduct-2.0.txt

#-------------

		ssh-keygen -b 1024 -t rsa -f "$HOME"/.ssh/id_rsa -N ''
		cat "$HOME"/.ssh/id_rsa.pub | xclip -selection c

		echo "ir a launchpan.net y utilizar ctrl + v para pegar la llave ssh en el campo correspondiente"

#-------------
		;;

	*)
            	echo "USO: $(basename $0) {iniciar}"
		;;

esac
exit 0
